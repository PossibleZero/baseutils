        <TextView
            android:layout_width="30dp"
            android:layout_height="80dp"
            android:background="@color/color_333333"
            android:text="text2" />

        <TextView
            android:layout_width="210dp"
            android:layout_height="80dp"
            android:background="@color/colorAccent"
            android:text="text3" />

        <TextView
            android:layout_width="90dp"
